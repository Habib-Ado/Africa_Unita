{
  "name": "africa-unita",
  "version": "1.0.0",
  "description": "Africa Unita - Sito Web per l'associazione di supporto per migranti africani",
  "main": "backend/server.js",
  "scripts": {
    "start": "cd backend && npm start",
    "dev": "cd backend && npm run dev",
    "install:backend": "cd backend && npm install",
    "install:all": "npm run install:backend",
    "build": "npm run install:all",
    "postinstall": "npm run install:backend",
    "railway:setup": "cd backend && npm run db:setup && npm run db:seed",
    "railway:reset": "cd backend && npm run db:reset-passwords",
    "railway:check": "cd backend && npm run test-connection",
    "railway:status": "bash railway-db-check.sh",
    "railway:fix": "node fix-username-mismatch.js",
    "railway:debug": "node debug-login.js",
    "railway:password": "node simple-password-fix.js",
    "railway:admin": "node check-admin-exists.js"
  },
  "keywords": [
    "africa",
    "unita",
    "associazione",
    "express",
    "mysql",
    "nodejs"
  ],
  "author": "Africa Unita",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
